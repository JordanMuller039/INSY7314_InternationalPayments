{
  "name": "banking-api",
  "version": "1.0.0",
  "main": "server.js",
  "description": "Secure Banking API with JWT authentication and MongoDB",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --test",
    "test:health": "node scripts/health-check.js",
    "test:api": "node test/banking-api.test.js",
    "test:security": "node test/security-headers.test.js",
    "test:all": "npm test && npm run test:api && npm run test:security",
    "lint": "eslint .",
    "cert:generate": "node scripts/generate-cert.js",
    "cert:openssl": "openssl req -x509 -nodes -days 365 -newkey rsa:2048 -keyout keys/key.pem -out keys/cert.pem -subj \"/CN=localhost\"",
    "health": "start http://localhost:3443/api/health",
    "setup": "echo Run 'npm install' then configure .env file. See MONGODB_SETUP.md for database setup.",
    "check-port": "netstat -ano | findstr :3443"
  },
  "keywords": [
    "banking",
    "api",
    "express",
    "mongodb",
    "jwt",
    "security"
  ],
  "author": "Banking App Team",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1"
  },
  "devDependencies": {
    "eslint": "^9.37.0",
    "nodemon": "^3.1.10"
  }
}
